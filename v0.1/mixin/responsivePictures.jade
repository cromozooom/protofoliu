//- responsive picture Artiderction
mixin picture(imgName, alt, huge, medium)
	picture
		source(srcset="#{assetsPath}images/#{imgName}_huge.jpg" media="(min-width: #{huge}px)")
		source(srcset="#{assetsPath}images/#{imgName}_large.jpg" media="(min-width: #{medium}px)")
		img.img-responsive(srcset="#{assetsPath}images/#{imgName}_small.jpg" alt="#{alt}")

mixin pictureBufnita(imgName, alt, huge, large, medium, path, igmClass, extension)
	picture
		source(srcset="#{path}/#{imgName}_huge#{extension}" media="(min-width: #{huge}px)")
		source(srcset="#{path}/#{imgName}_large#{extension}" media="(min-width: #{large}px)")
		source(srcset="#{path}/#{imgName}_medium#{extension}" media="(min-width: #{medium}px)")
		img.img-responsive(srcset="#{path}/#{imgName}_small#{extension}" alt="#{alt}" class="#{igmClass}")